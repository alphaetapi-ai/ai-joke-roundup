<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recent Jokes</title>
    <link rel="stylesheet" href="/styles.css" />
</head>
<body>
    <h1>Recent Jokes</h1>
    <p><a href="/">‚Üê Back to Joke Generator</a></p>
    
    <table class="jokes-table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Topic</th>
                <th>Joke Preview</th>
            </tr>
        </thead>
        <tbody>
            <% jokes.forEach(function(joke) { %>
                <tr>
                    <td><%= joke.date_created %></td>
                    <td><%= joke.topic %></td>
                    <td>
                        <div class="tooltip">
                            <a href="/joke/<%= joke.joke_id %>"><%= joke.preview %></a>
                            <span class="tooltiptext"><%= joke.joke_content %></span>
                        </div>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>